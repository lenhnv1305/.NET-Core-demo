@model MVCApp.Models.CategoryViewModels.CategoryViewModel

@{
    ViewData["Title"] = ViewBag.IsEditMode ? "Update" : "Create";
}

<form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
    <h4>@ViewData["Title"] new category.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    @if (ViewBag.IsEditMode)
    {
        <div class="form-group">
            <input asp-for="CategoryId" hidden/>
        </div>
    }
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-default">@(ViewBag.IsEditMode ? "Update" : "Create")</button>
</form>


@model IEnumerable<MVCApp.Models.PostViewModels.PostViewModel>
@{
    ViewData["Title"] = "List Post";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Short Description</th>
                    <th>Content</th>
                    <th>Thumbnail Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.ShortDescription</td>
                        <td>@item.Content</td>
                        <td>@item.ThumbnailImage</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

